---
// Size list component with checkboxes
---

<div class="mb-6">
  <div class="flex items-center justify-between mb-4">
    <label class="text-sm font-medium text-secondary">Screenshot Sizes</label>
    <label class="checkbox-item py-2 px-0 hover:bg-transparent">
      <div class="checkbox-wrapper">
        <input
          type="checkbox"
          id="select-all"
        />
        <div class="checkbox-custom"></div>
      </div>
      <span class="text-sm font-medium">Select All</span>
    </label>
  </div>

  <div id="size-list-container" class="size-list bg-white rounded-xl p-2">
    <!-- Size items will be dynamically generated here -->
  </div>
</div>

<style>
  #size-list-container {
    border: 1px solid var(--color-gray-2);
  }
</style>
